@model IEnumerable<eduMentor.Models.Certificado>

@{
    ViewData["Title"] = "Mis Certificados";
}

<style>
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        border-radius: 10px;
        margin-bottom: 2rem;
        text-align: center;
    }

    .cert-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .cert-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

    .btn {
        border-radius: 20px;
    }

    .btn-primary {
        background: #667eea;
        border: none;
    }

    .btn-outline-info {
        border-color: #667eea;
        color: #667eea;
    }

        .btn-outline-info:hover {
            background: #667eea;
            color: white;
        }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #6c757d;
    }

        .empty-state i {
            font-size: 5rem;
            color: #dcdcdc;
        }
</style>

<div class="container-fluid">
    <div class="page-header">
        <h1 class="mb-1"><i class="bi bi-award"></i> Mis Certificados</h1>
        <p class="mb-0">Bienvenido, <strong>@ViewBag.NombreEstudiante</strong>. Aquí puedes ver tus certificados generados.</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var cert in Model)
            {
                <div class="col-xl-4 col-lg-6 col-md-6">
                    <div class="card cert-card">
                        <div class="card-body text-center">
                            <h5 class="card-title mb-2"><i class="bi bi-book"></i> @cert.Curso.Titulo</h5>
                            <p class="text-muted">@cert.Curso.Nivel</p>
                            <hr />
                            <p><small><i class="bi bi-calendar"></i> Emitido el @cert.FechaGeneracion.ToString("dd/MM/yyyy")</small></p>
                            <p><small><i class="bi bi-hash"></i> Código: <strong>@cert.CodigoVerificacion</strong></small></p>

                            <div class="d-flex justify-content-center gap-2 mt-3">
                                <a href="@cert.UrlPDF" target="_blank" class="btn btn-outline-info btn-sm">
                                    <i class="bi bi-file-earmark-pdf"></i> Ver PDF
                                </a>

                                <a href="@Url.Action("DescargarPdf", "Certificadoes", new { id = cert.IdCertificado })"
                                   class="btn btn-primary btn-sm">
                                    <i class="bi bi-arrow-repeat"></i> Regenerar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-award"></i>
            <h4 class="mt-3">Aún no tienes certificados</h4>
            <p>Completa tus cursos para obtener tus certificados aquí.</p>
            <a href="/Cursos" class="btn btn-primary mt-3">
                <i class="bi bi-book"></i> Ver mis cursos
            </a>
        </div>
    }
</div>
