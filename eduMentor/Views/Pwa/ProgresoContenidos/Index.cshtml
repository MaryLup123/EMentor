@model IEnumerable<eduMentor.Models.ViewModels.CursoProgresoVM>



@{
    ViewData["Title"] = "Mi Progreso Académico";
}

<style>
    .page-header {
        background: linear-gradient(135deg, #38b2ac 0%, #319795 100%);
        color: white;
        padding: 2rem;
        border-radius: 10px;
        margin-bottom: 2rem;
    }

    .curso-progress-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .curso-progress-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }

    .progress {
        height: 15px;
        border-radius: 10px;
        overflow: hidden;
    }

    .progress-bar {
        transition: width 0.6s ease;
    }

    .badge-estado {
        font-size: 0.8rem;
        border-radius: 20px;
        padding: 0.4em 0.8em;
    }

        .badge-estado.completo {
            background: #38a169;
            color: white;
        }

        .badge-estado.enprogreso {
            background: #ecc94b;
            color: #000;
        }

        .badge-estado.inactivo {
            background: #e53e3e;
            color: white;
        }

    .accordion-button:not(.collapsed) {
        background-color: #f0fff4;
        color: #2f855a;
        font-weight: 600;
    }
</style>

<div class="container-fluid">
    <div class="page-header">
        <h1 class="mb-0"><i class="bi bi-graph-up"></i> Mi Progreso</h1>
        <p class="mb-0">Visualiza tu avance general y por módulos</p>
    </div>

    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            int index = 0;
            foreach (var curso in Model)
            {
                var estado = curso.Completado
                ? "completo"
                : (curso.PorcentajeAvance > 0 ? "enprogreso" : "inactivo");
                var accordionId = $"accordion-{index++}";

                <div class="col-xl-4 col-lg-6 col-md-6">
                    <div class="card curso-progress-card">
                        <div class="card-body">
                            <h5 class="mb-2"><i class="bi bi-book"></i> @curso.Titulo</h5>
                            <p class="text-muted mb-2">@curso.Nivel</p>

                            <div class="progress mb-3">
                                <div class="progress-bar bg-success" role="progressbar"
                                     style="width:@curso.PorcentajeAvance%"
                                     aria-valuenow="@curso.PorcentajeAvance" aria-valuemin="0" aria-valuemax="100">
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">Progreso: @curso.PorcentajeAvance%</small>
                                <span class="badge-estado @estado">
                                    @(estado == "completo" ? "Completado"
                                                                : estado == "enprogreso" ? "En progreso"
                                                                : "Sin iniciar")
                        </span>
                    </div>

                            <div class="mt-3 mb-2">
                                <small><strong>@curso.ModulosCompletados</strong> / @curso.TotalModulos módulos completados</small>
                            </div>
                    @if (curso.Completado)
                            {
                                <div class="text-center mt-3">
                                    <button class="btn btn-success btn-sm"
                                            onclick="redirigirCertificado(@curso.IdCurso, '@curso.Titulo')">
                                        🎓 Generar Certificado
                                    </button>
                                </div>
                            }


                            <!-- Accordion de módulos -->
                            <div class="accordion" id="@accordionId">
                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed" type="button"
                                                data-bs-toggle="collapse" data-bs-target="#collapse-@accordionId"
                                                aria-expanded="false" aria-controls="collapse-@accordionId">
                                            <i class="bi bi-list-task me-2"></i> Ver detalle de módulos
                                        </button>
                                    </h2>
                                    <div id="collapse-@accordionId" class="accordion-collapse collapse">
                                        <div class="accordion-body">
                                    @if (curso.Modulos != null && curso.Modulos.Any())
                                            {
                                                <ul class="list-group list-group-flush">
                                                    @foreach (var mod in curso.Modulos)
                                                    {
                                                        var modEstado = mod.Completado ? "completo" :
                                                        (mod.Porcentaje > 0 ? "enprogreso" : "inactivo");

                                                        <li class="list-group-item">
                                                            <div class="d-flex justify-content-between align-items-center">
                                                                <span><i class="bi bi-journal-text"></i> @mod.Titulo</span>
                                                                <span class="badge-estado @modEstado" style="font-size:0.75rem;">
                                                                    @(mod.Completado ? "✔" : mod.Porcentaje > 0 ? $"{mod.Porcentaje}%" : "—")
                                                                </span>
                                                            </div>
                                                            <div class="progress mt-2" style="height:8px;">
                                                                <div class="progress-bar bg-info" style="width:@mod.Porcentaje%"></div>
                                                            </div>
                                                        </li>


                                                    }
                                                </ul>
                                            }
                                            else
                                            {
                                                <div class="text-center text-muted py-2">
                                                    <small>No hay módulos registrados.</small>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center mt-5">
                <i class="bi bi-journal-x" style="font-size: 4rem; color: #ccc;"></i>
                <h4 class="mt-3 text-muted">Aún no estás inscrito en ningún curso</h4>
            </div>
        }
    </div>
</div>
@section Scripts {
    <script>
        function redirigirCertificado(idCurso, titulo) {
            // Redirige directamente al Create de Certificadoes
            window.location.href = `/Certificadoes/Create?idCurso=${idCurso}`;
        }
    </script>
}
