@model eduMentor.Models.ViewModels.UsuarioViewModel

<div class="modal fade" id="editUsuarioModal" tabindex="-1" aria-labelledby="editUsuarioModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="editUsuarioModalLabel">
                    <i class="bi bi-pencil-square"></i> Editar Usuario
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Edit" asp-controller="Usuarios" method="post" id="editUsuarioForm">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" asp-for="Id" />

                    <div class="row g-3">
                        <div class="col-md-12">
                            <label class="form-label fw-bold">
                                <i class="bi bi-person text-primary"></i> Nombre Completo
                            </label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold"><i class="bi bi-at text-success"></i> Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold"><i class="bi bi-person-badge text-info"></i> Usuario</label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold"><i class="bi bi-telephone text-warning"></i> Teléfono</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold"><i class="bi bi-shield-check text-primary"></i> Rol</label>
                            <select asp-for="Role" class="form-select" asp-items="@(new SelectList(ViewBag.Roles))">
                                <option value="">Seleccionar rol...</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mt-4">
                            <div class="form-check form-switch">
                                <input asp-for="Activo" class="form-check-input" type="checkbox" id="editActivoSwitch">
                                <label class="form-check-label" for="editActivoSwitch">Usuario Activo</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>
                    <button type="submit" class="btn btn-warning text-white">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
