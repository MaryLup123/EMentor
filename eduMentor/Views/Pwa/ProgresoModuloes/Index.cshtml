@model IEnumerable<eduMentor.Models.ViewModels.CursoInstructorVM>

@{
    ViewData["Title"] = "Dashboard de Instructores";
}

<style>
    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        border-radius: 10px;
        margin-bottom: 2rem;
    }

    .curso-card {
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: transform .3s;
    }

        .curso-card:hover {
            transform: translateY(-5px);
        }

    .progress-bar {
        transition: width .5s;
    }

    .badge-status {
        border-radius: 12px;
        font-size: .8rem;
        padding: .3em .7em;
    }

    .badge-success {
        background-color: #48bb78;
        color: #fff;
    }

    .badge-warning {
        background-color: #ecc94b;
        color: #000;
    }

    .badge-secondary {
        background-color: #a0aec0;
        color: #fff;
    }
</style>

<div class="container-fluid">
    <div class="page-header">
        <h1><i class="bi bi-bar-chart-line"></i> Dashboard de Instructores</h1>
        <p>Monitorea el progreso y desempeño de tus estudiantes</p>
    </div>

    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            int index = 0;
            foreach (var curso in Model)
            {
                var accordionId = $"curso-{index++}";
                <div class="col-xl-4 col-lg-6 col-md-6">
                    <div class="card curso-card">
                        <div class="card-body">
                            <h5 class="fw-bold"><i class="bi bi-book"></i> @curso.Titulo</h5>
                            <p class="text-muted">@curso.Nivel</p>

                            <div class="progress mb-2">
                                <div class="progress-bar bg-info" style="width:@curso.PromedioAvance%"></div>
                            </div>
                            <small>Promedio general: @curso.PromedioAvance%</small>

                            <hr />
                            <div class="d-flex justify-content-between">
                                <span class="badge-status badge-success">Completaron: @curso.EstudiantesCompletaron</span>
                                <span class="badge-status badge-warning">En progreso: @curso.EstudiantesEnProgreso</span>
                                <span class="badge-status badge-secondary">Sin iniciar: @curso.EstudiantesSinIniciar</span>
                            </div>
                            <p class="mt-2 text-muted">Estudiantes inscritos: <strong>@curso.TotalEstudiantes</strong></p>

                            <!-- Detalle de módulos -->
                            <div class="accordion mt-3" id="@accordionId">
                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed" type="button"
                                                data-bs-toggle="collapse" data-bs-target="#collapse-@accordionId">
                                            <i class="bi bi-journal-text me-2"></i> Ver módulos
                                        </button>
                                    </h2>
                                    <div id="collapse-@accordionId" class="accordion-collapse collapse">
                                        <div class="accordion-body">
                                            @if (curso.Modulos.Any())
                                            {
                                                <ul class="list-group list-group-flush">
                                                    @foreach (var mod in curso.Modulos)
                                                    {
                                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                                            <span>@mod.Titulo</span>
                                                            <span class="text-muted">@mod.PromedioAvance%</span>
                                                        </li>
                                                    }
                                                </ul>
                                            }
                                            else
                                            {
                                                <div class="text-center text-muted">No hay módulos registrados.</div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center mt-5">
                <i class="bi bi-clipboard-x" style="font-size:4rem;color:#ccc;"></i>
                <h4 class="mt-3 text-muted">No tienes cursos asignados.</h4>
            </div>
        }
    </div>
</div>
